<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@Story.css" xmlns="http://javafx.com/javafx/8.0.401" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sneakythief.controller.StoryController">
    <children>
        <!-- Background Image -->
        <ImageView fx:id="storybgImage" fitHeight="764.0" fitWidth="1358.0" layoutX="-6.0" layoutY="1.0" preserveRatio="false">
            <image>
                <Image url="@../../Graphics/Background/Story.jpeg" />
            </image>
        </ImageView>

        <!-- Dialog Box Image -->
        <ImageView fx:id="dialogBox" fitHeight="200.0" fitWidth="600.0" layoutX="340.0" layoutY="550.0" preserveRatio="false">
            <image>
                <Image url="@../../Graphics/Misc/blueframe.png" />
            </image>
        </ImageView>

        <!-- First Animated Text in Dialog Box -->
        <Text fx:id="arrivalText" layoutX="390.0" layoutY="620.0" wrappingWidth="500.0" styleClass="regular-text" text="Arrival"/>

        <!-- Second Animated Text in Dialog Box -->
        <Text fx:id="instructionsText" layoutX="390.0" layoutY="620.0" wrappingWidth="500.0" styleClass="regular-text" text="Instructions"/>

        <!-- Detective Standing Image (Left of Dialog Box) -->
        <ImageView fx:id="detectiveStanding" fitHeight="479.0" fitWidth="476.0" layoutX="4.0" layoutY="290.0" preserveRatio="true">
            <image>
                <Image url="@../../Graphics/Detective/Standing.png" />
            </image>
        </ImageView>

        <!-- Police Story Image (Right of Dialog Box) -->
        <ImageView fx:id="policeStory" fitHeight="388.0" fitWidth="385.0" layoutX="866.0" layoutY="340.0" preserveRatio="true">
            <image>
                <Image url="@../../Graphics/Detective/PoliceStory.png" />
            </image>
        </ImageView>

        <!-- Skip Button with Image -->
        <Button fx:id="skipButton" layoutX="1115.0" layoutY="58.0" prefHeight="46.0" prefWidth="123.0" style="-fx-background-color: transparent;">
            <graphic>
                <ImageView fitHeight="122.0" fitWidth="183.0" preserveRatio="true">
                    <image>
                        <Image url="@../../Graphics/Misc/Skip2.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
</AnchorPane>
