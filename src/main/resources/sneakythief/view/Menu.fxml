<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.401" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sneakythief.controller.MenuController">
    <children>
        <ImageView fitHeight="720.0" fitWidth="1280.0" preserveRatio="false">
            <image>
                <Image url="@../../Graphics/Background/Street.gif" />
            </image>
        </ImageView>

        <ImageView fx:id="titleCard" fitHeight="500.0" fitWidth="800.0" layoutX="240.0" layoutY="150.0" preserveRatio="true">
            <image>
                <Image url="@../../Graphics/SneakyThiefTitle.png" />
            </image>
        </ImageView>

        <Button fx:id="startButton" layoutX="540.0" layoutY="420.0" onAction="#StartGame" prefHeight="84.0" prefWidth="196.0" style="-fx-background-color: transparent;">
            <graphic>
                <ImageView fitHeight="95.0" fitWidth="135.0">
                    <image>
                        <Image url="@../../Graphics/Misc/start2.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="detectiveBoardButton" layoutX="540.0" layoutY="520.0" onAction="#OpenDetectiveboard" prefHeight="84.0" prefWidth="196.0" style="-fx-background-color: transparent;">
            <graphic>
                <ImageView fitHeight="114.0" fitWidth="137.0">
                    <image>
                        <Image url="@../../Graphics/Misc/DetectiveBadge.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="muteButton" layoutX="1150.0" layoutY="620.0" onAction="#ToggleMute" prefHeight="78.0" prefWidth="92.0" style="-fx-background-color: transparent;">
            <graphic>
                <ImageView fitHeight="60.0" fitWidth="60.0">
                    <image>
                        <Image url="@../../Graphics/Misc/bgmOFF-.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
</AnchorPane>
